.nav

  &__wrapper
    padding-top s(20)

  &__logo
    position: relative
    right s(5)
    display: block
    margin 0 auto

  &__list
    display: flex
    width: 100%
    flex-direction column
    align-items center
    margin-top s(50)

    & .router-link-active
      & svg .svg-path
        fill $cBlue

  &__item
    margin-bottom: s(45)

    & svg .svg-path
      transition .3s ease fill

    &:hover, &:focus

      & svg .svg-path
        fill $cBlue
        transition .3s ease fill


.sub-nav
  position absolute
  background-color $cBlueBg
  //left: 50px
  //right: 50px
  width: 100%
  bottom 1px
  left: 0
  padding-left: 50px
  transform translateY(100%)
  display: flex

  &__item
    margin-right 5%
    text-transform: uppercase
    font-weight: 700
    font-size 16px
    color rgba(255, 255, 255, 0.4)
    letter-spacing 1.76px
    transition 300ms ease color
    height 30px
    &:last-child
      margin-right: 0
    &:hover, &:focus
      color rgba(255, 255, 255, 1)
      transition 300ms ease color

    &--active
    &.router-link-active
      color rgba(255, 255, 255, 1)
      transition 300ms ease color


.login-page
  .el-main
    padding 0 !important

  .login
    &__title
      display: block
      text-align: center
      color $cWhite
      font-weight: 700
      font-size s(40)
      letter-spacing 1.04px
      margin-bottom s(10, 40)
    &__subtitle
      display: block
      text-align: center
      color $cWhite
      font-size s(26)
      letter-spacing 0.68px
      margin-bottom s(40, 26)

  .wrapper-login
    height 100vh
    background-image url("/img/bg-login.jpg")
    background-repeat no-repeat
    background-size cover
    background-position center center

  .wrapper-login-form
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction column
    height 100%

  .login-form
    position: relative
    width 100%
    max-width s(480)
    padding s(50) s(60) s(30)
    margin-top s(54)
    background $cWhite
    border-radius s(10)
    box-shadow: 0 s(20) s(60) 0 rgba(82,82,82,0.50)

    &__icon-container
      text-align: center
      position: absolute
      left: 0
      right: 0
      top: s(-44)
    &__icon
      display: inline-block
      background $cWhite
      text-align: center
      padding s(25)
      border-radius 50%

    .el-form-item
      &__label
        font-size 16px
        font-weight: 700
        color $cBlack

    .el-button
      width 60%
      display: block
      margin 0 auto

    .errors
      display: block
      font-size 14px
      color $cDanger
      margin-top s(15, 14)
      text-align: center

@media screen and (max-width:1024px)
  .wrapper-login-form
    padding 0 s(20,16)

@media screen and (max-width:400px)
  .login-page
      .login
        &__title
          font-size s(30)
        &__subtitle
          font-size s(20)
      .login-form
        padding s(50) s(30) s(30)
        .el-button
          width 80%

.grid
  display: flex;
  align-items center;
  &--padding
    padding s(15) s(40)
    transition 300ms ease box-shadow
    &:hover,
    &:focus
      box-shadow: 0 0 s(40) 0 rgba(229,229,229,0.90);
      transition 300ms ease box-shadow

.grid-sb
  justify-content space-between

.col
  &--05
    flex 0 0 5%
  &--10
    flex 0 0 10%
  &--20
    flex 0 0 20%
  &--25
    flex 0 0 20%
  &--30
    flex 0 0 30%
  &--40
    flex 0 0 40%
  &--50
    flex 0 0 50%
  &--60
    flex 0 0 60%
  &--65
    flex 0 0 65%

.points
  display: flex

.point
  &__title
    text-align: center
    display: block
    margin-bottom: 4px
    text-transform: uppercase
    color #606266
    font-weight: 700
  &__point
    text-align: center
    font-weight: 700

@media screen and (max-width: 1024px)
  .grid
    display block


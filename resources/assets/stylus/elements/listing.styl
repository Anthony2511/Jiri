.top-form {
  align-items flex-start
}
.settings{
  &__bloc{
    display flex
    flex-direction row
    flex-wrap wrap
  }
}

.box{
  display flex
  flex-direction column
  justify-content center
  align-items center
  margin-bottom 20px
}
.listing {
  display: flex
  flex-direction column
  flex-wrap nowrap
  &__button{
    text-align right
  }

  &__ponderation {
    color: $cBlue;
    font-weight: 700
    font-size: 18px;
  }

  &__text {
    color: $alternateText;
    font-size: 18px;
    line-height: 1.2em
  }

  &__item {
    padding s(15) s(40)
    background-color $cWhite
    margin-bottom s(20)
    box-shadow: 0 0 s(15) 0 rgba(229,229,229,0.50);
    border-radius: s(4);
    &--dash{
      display flex
      flex-direction column
    }

    &:last-child {
      margin-bottom: 0
    }

    &--nopadding {
      padding 0
    }
  }

  &__eventTitle {
    font-size: 22px
    color: $cBlack2
    font-weight: 700
    letter-spacing: 2px
  }

  &__regularText {
    color: $alternateText
    font-size: 18px
    font-weight: 700
  }

  &__img {
    margin-left: 7px
  }

  &__status {
    font-weight: 700
    text-transform: uppercase
    font-size: 16px
    letter-spacing: 1.5px

    &--over {
      color: $cSuccess
    }

    &--start {
      color: $cInfo
    }

    &--started {
      color: $cWarning
    }
  }

  &__tar {
    text-align: right;
  }
}

.dash {
  &__intro{
    width 60%
    margin 150px auto
    line-height 1.6
    text-align: center
    background-color: $cWhite
    padding: 20px 40px
    font-size 18px
    border-radius: 10px
  }
}

@media screen and (max-width: 1024px)
  .listing
    flex-direction row
    flex-wrap wrap
    justify-content: space-between
    &__ponderation-totale
      display flex
      flex-direction row
      justify-content space-between
    &__item
      padding s(10) s(20)
      width 47.5%
      text-align center
    &__button
      text-align center
      margin-top s(20,16)
    &__avatar
      margin 0 auto s(20,16)
      width 10%
    &__eventTitle
      line-height 2
    &__tar
      text-align center
      margin-top s(20,16)
    &__regularText
      line-height 1.6
  .dash
    &__intro
      width 75%

@media screen and (max-width: 768px)
  .listing
    &__item
      width 100%
    &__name
      padding-bottom 5px
  .dash
    &__intro
      width 90%

@media screen and (max-width:600px)
  .listing
    &__ponderation-totale
      flex-direction column
@media screen and (max-width: 450px)
  .listing
    &__eventTitle
      font-size 20px
    &__regularText
      font-size 16px
    &__text
      font-size 14px
    &__img
      width 20px
    &__link
      padding 0

@media screen and (max-width: 400px)
  .listing
    &__name
      font-size s(14)


